<DocsHero
  @logo='ember'
  @slimHeading='Ember'
  @strongHeading='MapboxGL'
  @byline='Fast, expressive MapboxGL maps'
/>

<MapboxGl as |map|>
  <map.source @options={{hash type='geojson' data=this.wanderDrone}} as |source|>
    <source.layer @layer={{hash type='symbol' layout=(hash icon-image='rocket-15')}} />
  </map.source>

  {{#if this.curLocation}}
    <map.marker @lngLat={{this.curLocation}} as |marker|>
      <marker.popup>
        This is where you are!
      </marker.popup>
    </map.marker>

    <map.call @func='easeTo' @positionalArguments={{array (hash center=this.curLocation)}}/>
  {{/if}}

  <map.on @event='click' @action={{this.onClick}}/>
</MapboxGl>
